{
  "compilerOptions": {
    "target": "ES2020",
    //"module": "commonjs",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
     "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/prisma/*": ["prisma/*"]
    }
  },
  "include": ["src/**/*", "prisma/client.ts"],

  "exclude": ["node_modules", "dist", "tests", "prisma"]
}
